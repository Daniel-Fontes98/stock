// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}


model Item {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  name         String      @unique
  quantityUnit Int         @default(0)
  quantityBox  Int         @default(0)
  quantityInBox Int @default(0)
  Total Int @default(0) //Total = quantityUnit + quantityBox * quantityInBox
  alertMin     Int    
  alertMax Int
  operations   Operation[]
  alert Alert?
  supplier Supplier @relation(fields: [supplierId], references: [id])
  supplierId String

  @@index([supplierId])
}

model Operation {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  operationType String //Adicionar ou remover
  quantity      Int
  unitType      String //caixa ou unidade
  deliveredTo String?
  reference     String?
  description   String?
  item          Item     @relation(fields: [itemId], references: [id])
  itemId        String

  @@index([itemId])
}

model Alert {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type String 
  item      Item     @relation(fields: [itemId], references: [id])
  itemId    String @unique
}

model Supplier {
  id String @id @default(cuid())
  name String @unique
  contact String 
  item Item[]
}